{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile SFML",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/output.exe",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run SFML",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/k",
                "${fileDirname}\\output.exe"
            ],
            "dependsOn": "Compile SFML",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            }
        }
    ]
}



